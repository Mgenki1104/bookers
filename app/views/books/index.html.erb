
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @books.each do |book| %>
        <tb><%= book.title %></tb>
        <tb><%= book.body %></tb>
        <tb></tb>
        <% end %>
      </tr>  
    </tbody>
  </table>
  
<%= form_with model:@book, local:true do |f| %>
  <h2>New book</h2>
   <div class = "field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
    </div>
   <div class = "field">
     <label for="book_body">Body</label>
    <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>
